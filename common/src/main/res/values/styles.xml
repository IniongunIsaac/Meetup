<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- For Android sdk versions 26+. -->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat</item>
        <!-- Target Android sdk versions < 26 and > 14. -->
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AppText.Header" parent="AppText">
        <item name="android:textSize">@dimen/app_large_text_size</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="AppText.SuperHeader" parent="AppText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/app_super_large_text_size</item>
    </style>

    <style name="AppText.Small" parent="AppText">
        <item name="android:textSize">@dimen/app_small_text_size</item>
    </style>

    <style name="AppText.Small.Bold" parent="AppText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/app_small_text_size</item>
    </style>

<!--    <style name="AppText.Small.Light" parent="AppText">-->
<!--        <item name="android:fontFamily">@font/montserrat_light</item>-->
<!--        <item name="android:textSize">@dimen/app_small_text_size</item>-->
<!--    </style>-->

    <style name="AppText.Medium" parent="AppText">
        <item name="android:textSize">@dimen/app_medium_text_size</item>
    </style>

    <style name="AppText.GrayedOut" parent="AppText">
        <item name="android:textSize">@dimen/app_text_size</item>
        <item name="android:textColor">@color/faint_text_color</item>
    </style>

    <style name="AppTextInput.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="AppButton.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="cornerRadius">@dimen/app_button_corner_radius</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="AppBorderLessButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BorderButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppChipFilter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="chipCornerRadius">5dp</item>
    </style>

</resources>